<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- BottomSheetDialog -->

    <style name="AppBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="AppBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/AppBottomSheetDialogStyle</item>
    </style>

    <style name="TransparentAppBottomSheetDialogStyle" parent="AppBottomSheetDialogStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TransparentAppBottomSheetDialog" parent="AppBottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentAppBottomSheetDialogStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- FoundsView style -->
    <declare-styleable name="FoundsView">
        <attr name="fv_textTitleAppearance" format="reference"/>
        <attr name="fv_textTotalAmountAppearance" format="reference"/>
        <attr name="fv_textAmountAppearance" format="reference"/>
        <attr name="fv_chipAppearance" format="reference"/>
        <attr name="fv_textTitleColor" format="color"/>
        <attr name="fv_textColor" format="color"/>
        <attr name="fv_analyticsRowSelectedColor" format="color"/>
        <attr name="fv_analyticsRowUnselectedColor" format="color"/>
        <attr name="fv_dividerColor" format="color"/>
        <attr name="fv_totalAmountTitle" format="string"/>
        <attr name="fv_amountTitle" format="string"/>
    </declare-styleable>
    <style name="MyMoneyText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- Caption -->
    <style name="MyMoneyText.Caption">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Overline -->
    <style name="MyMoneyText.Overline">
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyMoneyText.Subtitle1">
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MyMoneyText.H5">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
    <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
    <item name="chipStrokeColor">@color/background_color_chip_state_list</item>
    <item name="android:textColor">@color/text_color_chip_state_list</item>
    <item name="chipSurfaceColor">@android:color/transparent</item>
</style>
</resources>